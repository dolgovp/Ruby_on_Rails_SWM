<%= form_for(@post, remote: true) do |f| %>
<!-- Modal -->
<div class="modal fade" id="mynewpost" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t 'create_title'%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if current_user.id == 1 %>
          <div class="field">
            <%= f.label  t :name %><br>
            <%= f.text_area :name, class: "form-control post_name" %>
          </div>
        <% end%>

        <% if current_user.id == 1%>
          <div class="field">
            <%= f.label  t :task %><br>
            <%= f.text_area :task, class: "form-control post_task" %>
          </div>
        <% end%>

        <% if current_user.id == 1 %>
          <div class="field">
            <%= f.label t :task_images %>
            <%= f.file_field :task_images, multiple: true%>
          </div>
        <% end%>

        <% if current_user.id == 1 %>
          <div class="field">
            <%= f.label t :answ_images %>
            <%= f.file_field :answ_images, multiple: true%>
          </div>
        <% end%>

        <% if current_user.id == 1 %>
          <div class="field">
            <%= f.label t :comment %><br>
            <%= f.text_area :comment, class: "form-control post_comment" %>
          </div>
        <% end%>
              
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t 'close'%></button>
        <%= f.submit t :submit, class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>
<% end%>
<h1><%= t 'tasks'%></h1>
<br>
<table class="table" id="posts" style="margin: auto">
  <thead class="thead-light">
    <tr>
      <th><%= t 'name'%></th>
      <th><%= t 'task'%></th>
      <th><%= t 'comment'%></th>
      <th><%= t 'by_user'%></th>
      <th><%= t 'actions'%></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @posts%>
  </tbody>
</table>

<br>
<hr>
<% if current_user.id == 1 %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mynewpost">
  <%= t 'new_post'%>
</button>
<% end%>
